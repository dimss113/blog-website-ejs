<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="" class="form-label">Title</label>
        <input type="text" name="title" class="form-control" id="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="" class="form-label">Post</label>
        <textarea name="post" id="" class="form-control" rows="10"></textarea>
    </div>
